{
  "name": "uhi67/umvc-app",
  "description": "Application template for UMVC",
  "keywords": ["umvc", "framework", "application template"],
  "type": "project",
  "homepage": "https://umvc.uhisoft.hu/",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "license": "MIT",
  "authors": [
    {
      "name": "uhi67",
      "email": "uherkovich.peter@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-iconv": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-mysqli": "*",
    "ext-openssl": "*",
    "ext-pdo_sqlite": "*",
    "ext-pdo": "*",
    "ext-simplexml": "*",
    "psr/log": "*",
    "npm-asset/bootstrap": "^5.2.3",
    "simplesamlphp/simplesamlphp": "^2.2",
    "uhi67/umvc": "dev-feature/php8.2"
  },
  "require-dev": {
    "codeception/codeception": "*",
    "codeception/module-asserts": "*",
    "php-webdriver/webdriver": "*",
    "codeception/module-filesystem": "*",
    "codeception/lib-innerbrowser": "*",
    "codeception/module-rest": "*"
  },
  "scripts": {
    "post-install-cmd": [
      "app\\lib\\Install::postInstall"
    ],
    "post-create-project-cmd": [
      "uhi67\\lib\\Install::postInstall"
    ]
  },
  "autoload": {
    "psr-4": {
      "app\\": "."
    }
  },
  "config": {
    "allow-plugins": {
      "simplesamlphp/composer-module-installer": true
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ]
}
